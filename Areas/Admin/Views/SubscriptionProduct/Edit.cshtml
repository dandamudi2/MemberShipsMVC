@model MemberShipWebsite.Areas.Admin.Models.SubscriptionProductModel
@using MemberShipWebsite.Extensions

@{
    ViewBag.Title = "Edit";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>SubscriptionProduct</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ProductId)
    @Html.Hidden("OldSubscriptionId", Model.SubscriptionId)
    @Html.Hidden("OldProductId", Model.ProductId)

    <div class="form-group">
        @Html.DisplayNameFor(m => m.SubscriptionId)
        @Html.DropDownListFor(m => m.SubscriptionId, Model.Subscriptions.ToSelectListItem(0), new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(m => m.ProductId)
        @Html.DropDownListFor(m => m.ProductId, Model.Products.ToSelectListItem(0), new { @class = "form-control" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.Partial("_BackToListButtonPartial")
</div>
