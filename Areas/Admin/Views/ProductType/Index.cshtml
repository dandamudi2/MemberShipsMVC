@model IEnumerable<MemberShipWebsite.Entities.ProductType>
@using MemberShipWebsite.Areas.Models;

@{
    ViewBag.Title = "Index";
}



<p>
   
    <a href="@Url.Action("Create")" class="btn btn-primary"><i class="fa fa-plus"></i> Create New</a>
</p>
<table class="table table-striped table-bordered">
    <tr class="success text-light" >
        <th >
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            @Html.Partial("_TableButtonView", new SmallButtonModel
             {
               Id = item.Id
             })
        </tr>
    }

</table>
